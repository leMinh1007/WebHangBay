@model WebHangBay.Models.ChuyenBay

@{
    ViewBag.Title = "ThemMoiChuyenBay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="page-section features" style="margin:300px 500px">
        <h4> Thêm chuyến bay mới  </h4>

        @using (Html.BeginForm("ThemMoiChuyenBay","Home",FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                 
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class = "control-label col-md-2">Flight No</label>

                    <div class="col-md-10">
                        <input class = "form-control" Type = "number" name="FlightNo" value="@Model.FlightNo" />
                        @Html.ValidationMessageFor(model => model.FlightNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Departure Date</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Ngay, new { htmlAttributes = new { @class = "form-control", Type = "date" } })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Point Of Loading</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiemDi, new { htmlAttributes = new { @class = "form-control", } })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Point Of UnLoading</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiemDen, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</main> 